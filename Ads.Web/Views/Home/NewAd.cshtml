@{
    ViewData["Title"] = "New Ad";
}

<div class="col-md-6 offset-md-3 bg-light p-4 rounded shadow">
    <h2>New Ad</h2>
    <form method="post" action="/home/newad">
        <div class="row">
            <div class="col-md-12">
                <input name="phonenumber" type="text" placeholder="Phone Number" class="form-control"/>
            </div>
        </div>
        <br />
        <textarea name="details" class="form-control" rows="10" placeholder="Description"></textarea>
        <button class="btn btn-primary w-100 btn-lg">Submit</button>
    </form>
</div>