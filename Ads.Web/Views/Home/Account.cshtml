@{
    ViewData["Title"] = "My Account";
}
@model AccountViewModel

<div class="row">
    <div class="col-md-6 offset-md-3">
        @if (Model.Ads.Count == 0)
        {
            <h1 class="bg-light">You don't have any ads yet</h1>
        }
        @foreach (var ad in Model.Ads)
        {
            <div class="bg-light p-4 rounded shadow mb-3">
                <h5>Listed by  @(ad.Name ?? "anonymous")</h5>
                <h5>Listed on @ad.Date.ToLongDateString()</h5>
                <h5>Phone Number: @ad.PhoneNumber</h5>
                <h3>Details:</h3>
                <p>@ad.Details</p>
                <form method="post" action="/home/deletead">
                    <input type="hidden" name="id" value="@ad.Id" />
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        }
    </div>
</div>
